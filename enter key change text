<html ng-app="demoApp">
<head>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.2/angular.min.js"></script>
  <meta charset="utf-8">
  <title>JS Bin</title>
</head>
  
<script>
    var demoApp = angular.module("demoApp", []);
    demoApp.controller("demoCtrl2",function($scope){
	    scope.keypressHandler = function(event, nextIdx){
		    if(event.keyCode == 13){
		        angular.element(
		            document.querySelector('#f_'+nextIdx))[0].focus();
		    }
		}
	});
</script>
<body>
  <div ng-controller="demoCtrl2">
 	<input type="text" ng-model="field1" id="f_1" ng-keypress="keypressHandler($event, 2)"/>
	<br/>
	<input type="text" ng-model="field2" id="f_2" ng-keypress="keypressHandler($event, 3)"/>
	<br/>
    <input type="text" ng-model="field3" id="f_3" ng-keypress="keypressHandler($event, 4)"/>
	<br/>
  </div>
</body>
</html>
